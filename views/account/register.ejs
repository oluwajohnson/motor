<h1 class="form-title"><%= title %></h1>

<form method="POST" action="/account/register" class="form-container">

  <div class="form-group">
    <label for="account_firstname">First Name</label>
    <input type="text" name="account_firstname" required />
  </div>

  <div class="form-group">
    <label for="account_lastname">Last Name</label>
    <input type="text" name="account_lastname" required />
  </div>

  <div class="form-group">
    <label for="account_email">Email</label>
    <input type="email" name="account_email" required />
  </div>

  <div class="form-group">
    <label for="account_password">Password</label>
    <input 
      type="password" 
      name="account_password" 
      id="password"
      required
      minlength="12"
      pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{12,}$"
      title="Must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character."
    />
    <button type="button" class="toggle-btn" onclick="togglePassword()">
      Show Password
    </button>
  </div>

  <p class="password-hint">
    Password must be minimum of 12 characters and include 
    1 capital letter, 1 number and 1 special character.
  </p>

  <button type="submit" class="submit-btn">Register</button>

</form>
