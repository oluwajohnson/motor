<h1>Add Classification</h1>

<% if (messages.error) { %>
  <div class="alert alert-danger">
    <%= messages.error[0] %>
  </div>
<% } %>

<% if (messages.success) { %>
  <div class="alert alert-success">
    <%= messages.success[0] %>
  </div>
<% } %>


<form method="post" action="/inv/add-classification">
  <!-- <label for="classification_name" style="color: red;">
    Classification Name (no spaces or special characters)
  </label> -->

  <input
    type="text"
    id="classification_name"
    name="classification_name"
    pattern="^[A-Za-z0-9]+$"
    required
  >

  <button type="submit">Add Classification</button>
</form>
